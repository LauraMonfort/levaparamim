<%= simple_form_for(@request) do |f| %>
    <div class="errors-container">
      <ul>
        <% @request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>

    <% f.label :origin %>
    <%= f.text_field :origin, placeholder: "From", class: "form-control search-bar", title: "Where's your item located?", size: "50" %>
    <br>
    <% f.label :destination %>
    <%= f.text_field :destination, placeholder: "To", class: "form-control search-bar", title: "Where do you need to deliver it?", size: "50" %>
    <br>
    <%= f.input :size, collection: ["Fits in a pocket", "Fits in a bag", "Fits in a car", "Fits in a big car", "Fits in a van"], :include_blank => false,:label => false, prompt: "Item size", class: "form-control search-bar", size: "20"%>
    <%= f.text_field :delivery_date, :required => false,
    id: "query_delivery_date_",
    class: "form-control search-bar",
    size: "20",
    placeholder: "Delivery date",
    data: {
    flatpickr_format: "Y-m-d",
    flatpickr_min_date: Time.zone.now }
    %>
    <% f.label :price %>
    <%= f.text_field :price, placeholder: "Price", title: "How much you are willing to pay? (ex: 9)", class: "form-control search-bar", size: "20" %>
    <%f.label :comment %>
    <%= f.text_field :comment, placeholder: "Description", class: "form-control search-bar", title: "Give more details if necessary", size: "50", height: "50px" %>
    <%= f.input :image, :label => false %>
    <%= f.input :image_cache, as: :hidden %>
    <%= f.submit class: "btn btn-sucess search-bar"%>
<% end %>


