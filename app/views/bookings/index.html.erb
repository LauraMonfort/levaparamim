
  <p style="padding-left: 280px"><strong>My Bookings</strong></p>

  <div class="card-show-container">
   <div class="card-container-booking-show">
    <% if @bookings.any? %>
     <% @bookings.each do |booking|  %>

      <div class="front card-show">
        <div class="card-body-front">
          <div class="card-picture" style="background: url(<%= booking.request.image %>);">
            <%= cl_image_tag booking.request.user.avatar, class:"card-user avatar avatar-large" %>
          </div>
          <div class="card-description-flex">
            <p><i class="fas fa-map-marker-alt"></i> <%= booking.request.origin[0..25] + '...' %></p>
            <h2>R$ <%= booking.request.price %></h2>
          </div>
          <div class="card-description-flex">
            <p><i class="fas fa-map-marker-alt"></i> <%= booking.request.destination[0..25] + '...' %></p>
            <p><i class="far fa-calendar-alt"></i> <%= booking.request.delivery_date.strftime("%d/%m/%y")%></p>
          </div>
        </div>
      </div>

      <div class="back card-show">
        <div class="card-body-back">
          <div class="card-description-flex">
            <h5><%= booking.request.user.first_name %> <%= booking.request.user.last_name %></h5>
            <p><i class="far fa-calendar-alt"></i> <%= booking.request.delivery_date.strftime("%d/%m/%y")%></p>
          </div>
          <div class="card-description-flex">
            <p><strong>Origin: </strong></i> <%= booking.request.origin %></p>
          </div>
          <div class="card-description-flex">
            <p><strong>Destination: </strong></i> <%= booking.request.destination %></p>
          </div>
          <div class="card-description-flex">
            <p><strong>Comment: </strong><%= booking.request.comment %></p>
          </div>
        </div>
      </div>

    <% end %>
   <% else %>
  <p>No booking found.</p>
  <% end %>
</div>
</div>


