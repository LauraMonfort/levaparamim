  <h3 style="text-align: center; margin-bottom: 30px;margin-top: 15px;"><strong>My Deliveries</strong></h3>

  <div class="card-show-bookings-container">
   <div class="">
    <% if @bookings.any? %>
     <% @bookings.each do |booking|  %>
      <div class="card-show-bookings">

        <div class="card-body-front">
          <div class="card-picture" style="background: url(<%= booking.request.image %>);">
            <%= cl_image_tag booking.request.user.avatar, class:"card-user avatar avatar-large" %>
          </div>
        </div>

        <div class="card-body-back">
          <div class="card-description-flex">
            <h5><%= booking.request.user.first_name %> <%= booking.request.user.last_name %></h5>
            <h2>R$ <%= booking.request.price %></h2>
          </div>
          <div class="card-description-flex">
            <p><i class="far fa-calendar-alt"></i> <%= booking.request.delivery_date.strftime("%d/%m/%y")%>
          </div>
          <div class="card-description-flex">
            <p><strong>Origin: </strong></i> <%= booking.request.origin %></p>
          </div>
          <div class="card-description-flex">
            <p><strong>Destination: </strong></i> <%= booking.request.destination %></p>
          </div>
          <div class="card-description-flex">
            <p><strong>Comment: </strong><%= booking.request.comment %></p>
          </div>
        </div>

      </div>
    <% end %>
   <% else %>
  <p>No delivery found.</p>
  <% end %>
</div>
</div>

